{
  "exercise": "clock",
  "version": "2.4.0",
  "comments": [
    "Most languages require constructing a clock with initial values,",
    "adding or subtracting some number of minutes, and testing equality",
    "in some language-native way.  Negative and out of range values are",
    "generally expected to wrap around rather than represent errors."
  ],
  "cases": [
    {
      "description": "Create a new clock with an initial time",
      "cases": [
        {
          "uuid": "3f11730b-c19f-4353-af4c-69c3c35eb1e3",
          "description": "on the hour",
          "property": "create",
          "input": {
            "hour": 8,
            "minute": 0
          },
          "expected": "08:00"
        },
        {
          "uuid": "94cc54d7-7c06-4fbe-ae0c-d6247c551734",
          "description": "past the hour",
          "property": "create",
          "input": {
            "hour": 11,
            "minute": 9
          },
          "expected": "11:09"
        },
        {
          "uuid": "d078e0a3-788c-4c77-9bb1-cf7badcacf37",
          "description": "midnight is zero hours",
          "property": "create",
          "input": {
            "hour": 24,
            "minute": 0
          },
          "expected": "00:00"
        },
        {
          "uuid": "e4b1d21c-4a5a-41a3-b479-885270e761cc",
          "description": "hour rolls over",
          "property": "create",
          "input": {
            "hour": 25,
            "minute": 0
          },
          "expected": "01:00"
        },
        {
          "uuid": "15565b02-7841-4806-9316-928db675018b",
          "description": "hour rolls over continuously",
          "property": "create",
          "input": {
            "hour": 100,
            "minute": 0
          },
          "expected": "04:00"
        },
        {
          "uuid": "4cfd9402-1ce6-434a-9e16-8a5647b4ca46",
          "description": "sixty minutes is next hour",
          "property": "create",
          "input": {
            "hour": 1,
            "minute": 60
          },
          "expected": "02:00"
        },
        {
          "uuid": "6eaeefa1-9842-4cde-b4e6-5246a0411209",
          "description": "minutes roll over",
          "property": "create",
          "input": {
            "hour": 0,
            "minute": 160
          },
          "expected": "02:40"
        },
        {
          "uuid": "152955a5-9b1e-4bc1-8531-acf7658f4007",
          "description": "minutes roll over continuously",
          "property": "create",
          "input": {
            "hour": 0,
            "minute": 1723
          },
          "expected": "04:43"
        },
        {
          "uuid": "8e14d90c-fe36-4d0d-becb-d5e0975a0a53",
          "description": "hour and minutes roll over",
          "property": "create",
          "input": {
            "hour": 25,
            "minute": 160
          },
          "expected": "03:40"
        },
        {
          "uuid": "b73134d3-cfc9-4af3-a913-c7cb66aec1c9",
          "description": "hour and minutes roll over continuously",
          "property": "create",
          "input": {
            "hour": 201,
            "minute": 3001
          },
          "expected": "11:01"
        },
        {
          "uuid": "b53b4674-0051-4731-b4ad-0dc9a8e94b77",
          "description": "hour and minutes roll over to exactly midnight",
          "property": "create",
          "input": {
            "hour": 72,
            "minute": 8640
          },
          "expected": "00:00"
        },
        {
          "uuid": "b71d3e3e-1ecc-4fcd-a461-317cc5f8ae3c",
          "description": "negative hour",
          "property": "create",
          "input": {
            "hour": -1,
            "minute": 15
          },
          "expected": "23:15"
        },
        {
          "uuid": "a36aa6ce-6f72-4ee7-8ace-5556a307372c",
          "description": "negative hour rolls over",
          "property": "create",
          "input": {
            "hour": -25,
            "minute": 0
          },
          "expected": "23:00"
        },
        {
          "uuid": "f5ee1a18-bafe-43ea-a87b-699b81331f1b",
          "description": "negative hour rolls over continuously",
          "property": "create",
          "input": {
            "hour": -91,
            "minute": 0
          },
          "expected": "05:00"
        },
        {
          "uuid": "109e9ddb-b2c8-45b9-abda-d9641c3d98c6",
          "description": "negative minutes",
          "property": "create",
          "input": {
            "hour": 1,
            "minute": -40
          },
          "expected": "00:20"
        },
        {
          "uuid": "f7010239-055c-45d5-99fa-9b8c4f2429af",
          "description": "negative minutes roll over",
          "property": "create",
          "input": {
            "hour": 1,
            "minute": -160
          },
          "expected": "22:20"
        },
        {
          "uuid": "8cb7f9d2-868c-48d2-8b2e-fadc6047373c",
          "description": "negative minutes roll over continuously",
          "property": "create",
          "input": {
            "hour": 1,
            "minute": -4820
          },
          "expected": "16:40"
        },
        {
          "uuid": "98108980-880d-4fd8-b411-464ca6dbcbea",
          "description": "negative sixty minutes is previous hour",
          "property": "create",
          "input": {
            "hour": 2,
            "minute": -60
          },
          "expected": "01:00"
        },
        {
          "uuid": "fcc4854b-9fcd-4e48-a632-55b54f73852f",
          "description": "negative hour and minutes both roll over",
          "property": "create",
          "input": {
            "hour": -25,
            "minute": -160
          },
          "expected": "20:20"
        },
        {
          "uuid": "fc0bf0a2-2907-4343-a005-cb415282ce68",
          "description": "negative hour and minutes both roll over continuously",
          "property": "create",
          "input": {
            "hour": -121,
            "minute": -5810
          },
          "expected": "22:10"
        }
      ]
    },
    {
      "description": "Add minutes",
      "cases": [
        {
          "uuid": "6c0bb7be-3794-4e75-9a09-536b6fb9bcc6",
          "description": "add minutes",
          "property": "add",
          "input": {
            "hour": 10,
            "minute": 0,
            "value": 3
          },
          "expected": "10:03"
        },
        {
          "uuid": "f72d8bae-188d-49d6-b828-193c2439a8d6",
          "description": "add no minutes",
          "property": "add",
          "input": {
            "hour": 6,
            "minute": 41,
            "value": 0
          },
          "expected": "06:41"
        },
        {
          "uuid": "81e00580-a952-4dc0-afd0-546fe797b495",
          "description": "add to next hour",
          "property": "add",
          "input": {
            "hour": 0,
            "minute": 45,
            "value": 40
          },
          "expected": "01:25"
        },
        {
          "uuid": "b34d645d-7cd1-413f-a1dd-4efc37ecb71d",
          "description": "add more than one hour",
          "property": "add",
          "input": {
            "hour": 10,
            "minute": 0,
            "value": 61
          },
          "expected": "11:01"
        },
        {
          "uuid": "b09e0344-a78a-400c-88b0-ca98cd4a4de0",
          "description": "add more than two hours with carry",
          "property": "add",
          "input": {
            "hour": 0,
            "minute": 45,
            "value": 160
          },
          "expected": "03:25"
        },
        {
          "uuid": "26313821-9685-4bdc-9859-b53a6a0b9019",
          "description": "add across midnight",
          "property": "add",
          "input": {
            "hour": 23,
            "minute": 59,
            "value": 2
          },
          "expected": "00:01"
        },
        {
          "uuid": "bf8eea2e-db5a-4d0e-bda1-4512e543a5e5",
          "description": "add more than one day (1500 min = 25 hrs)",
          "property": "add",
          "input": {
            "hour": 5,
            "minute": 32,
            "value": 1500
          },
          "expected": "06:32"
        },
        {
          "uuid": "7c90112e-3dc5-458d-a208-bcbb02aaab4f",
          "description": "add more than two days",
          "property": "add",
          "input": {
            "hour": 1,
            "minute": 1,
            "value": 3500
          },
          "expected": "11:21"
        }
      ]
    },
    {
      "description": "Subtract minutes",
      "cases": [
        {
          "uuid": "abec83ab-05d8-4991-891d-ec4e84b73f1b",
          "description": "subtract minutes",
          "property": "subtract",
          "input": {
            "hour": 10,
            "minute": 3,
            "value": 3
          },
          "expected": "10:00"
        },
        {
          "uuid": "2db06b72-12d2-4282-93c5-a262a98eb327",
          "description": "subtract to previous hour",
          "property": "subtract",
          "input": {
            "hour": 10,
            "minute": 3,
            "value": 30
          },
          "expected": "09:33"
        },
        {
          "uuid": "f9278f3c-a251-402a-b476-374b1470c597",
          "description": "subtract more than an hour",
          "property": "subtract",
          "input": {
            "hour": 10,
            "minute": 3,
            "value": 70
          },
          "expected": "08:53"
        },
        {
          "uuid": "aff12c85-492d-4f1d-b796-b7257d8b3f55",
          "description": "subtract across midnight",
          "property": "subtract",
          "input": {
            "hour": 0,
            "minute": 3,
            "value": 4
          },
          "expected": "23:59"
        },
        {
          "uuid": "a7dee339-8505-476b-9df8-fbb5052de2bf",
          "description": "subtract more than two hours",
          "property": "subtract",
          "input": {
            "hour": 0,
            "minute": 0,
            "value": 160
          },
          "expected": "21:20"
        },
        {
          "uuid": "cac8ad8e-d262-41f5-85dc-19c24994f23c",
          "description": "subtract more than two hours with borrow",
          "property": "subtract",
          "input": {
            "hour": 6,
            "minute": 15,
            "value": 160
          },
          "expected": "03:35"
        },
        {
          "uuid": "59b30ada-2af7-4183-983c-12ca4891b09b",
          "description": "subtract more than one day (1500 min = 25 hrs)",
          "property": "subtract",
          "input": {
            "hour": 5,
            "minute": 32,
            "value": 1500
          },
          "expected": "04:32"
        },
        {
          "uuid": "a434eb4f-4ae1-4117-bf89-d90858cfbd50",
          "description": "subtract more than two days",
          "property": "subtract",
          "input": {
            "hour": 2,
            "minute": 20,
            "value": 3000
          },
          "expected": "00:20"
        }
      ]
    },
    {
      "description": "Compare two clocks for equality",
      "cases": [
        {
          "uuid": "2fe07631-5eab-4f60-af37-6a4e8a017195",
          "description": "clocks with same time",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 15,
              "minute": 37
            },
            "clock2": {
              "hour": 15,
              "minute": 37
            }
          },
          "expected": true
        },
        {
          "uuid": "b8f3e272-f573-443c-876f-06c11acc9f7e",
          "description": "clocks a minute apart",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 15,
              "minute": 36
            },
            "clock2": {
              "hour": 15,
              "minute": 37
            }
          },
          "expected": false
        },
        {
          "uuid": "871174d2-70b1-4176-89fc-c4e378d0224f",
          "description": "clocks an hour apart",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 14,
              "minute": 37
            },
            "clock2": {
              "hour": 15,
              "minute": 37
            }
          },
          "expected": false
        },
        {
          "uuid": "0e020b33-e051-4518-a7b7-b04ef8d9bf15",
          "description": "clocks with hour overflow",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 10,
              "minute": 37
            },
            "clock2": {
              "hour": 34,
              "minute": 37
            }
          },
          "expected": true
        },
        {
          "uuid": "882d7c05-67f2-44d3-9543-b7c4556fd78a",
          "description": "clocks with hour overflow by several days",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 3,
              "minute": 11
            },
            "clock2": {
              "hour": 99,
              "minute": 11
            }
          },
          "expected": true
        },
        {
          "uuid": "6a363676-9f19-45cb-bbd5-7c45e9e96765",
          "description": "clocks with negative hour",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 22,
              "minute": 40
            },
            "clock2": {
              "hour": -2,
              "minute": 40
            }
          },
          "expected": true
        },
        {
          "uuid": "d40135cc-0aa9-43f4-851f-a878fe06ac13",
          "description": "clocks with negative hour that wraps",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 17,
              "minute": 3
            },
            "clock2": {
              "hour": -31,
              "minute": 3
            }
          },
          "expected": true
        },
        {
          "uuid": "9fa562ef-a7ed-4be4-9bfc-25cd0a1af7cc",
          "description": "clocks with negative hour that wraps multiple times",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 13,
              "minute": 49
            },
            "clock2": {
              "hour": -83,
              "minute": 49
            }
          },
          "expected": true
        },
        {
          "uuid": "1c729629-2d9b-40bc-b369-c81915ce0db7",
          "description": "clocks with minute overflow",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 0,
              "minute": 1
            },
            "clock2": {
              "hour": 0,
              "minute": 1441
            }
          },
          "expected": true
        },
        {
          "uuid": "3698e0d6-85a9-40df-b408-cc40b43c3caa",
          "description": "clocks with minute overflow by several days",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 2,
              "minute": 2
            },
            "clock2": {
              "hour": 2,
              "minute": 4322
            }
          },
          "expected": true
        },
        {
          "uuid": "f3a8b37d-6512-40fd-9212-f0e83aa8c5af",
          "description": "clocks with negative minute",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 2,
              "minute": 40
            },
            "clock2": {
              "hour": 3,
              "minute": -20
            }
          },
          "expected": true
        },
        {
          "uuid": "c2f9af0d-8028-42c2-b8d5-cca2e14a751b",
          "description": "clocks with negative minute that wraps",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 4,
              "minute": 10
            },
            "clock2": {
              "hour": 5,
              "minute": -1490
            }
          },
          "expected": true
        },
        {
          "uuid": "ad68d72b-3059-4a35-af83-aad6ee614654",
          "description": "clocks with negative minute that wraps multiple times",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 6,
              "minute": 15
            },
            "clock2": {
              "hour": 6,
              "minute": -4305
            }
          },
          "expected": true
        },
        {
          "uuid": "45d81ef1-d9fe-483b-b0c9-e7b461a65437",
          "description": "clocks with negative hours and minutes",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 7,
              "minute": 32
            },
            "clock2": {
              "hour": -12,
              "minute": -268
            }
          },
          "expected": true
        },
        {
          "uuid": "3a798c94-058e-43f7-a059-95bdb99f28d1",
          "description": "clocks with negative hours and minutes that wrap",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 18,
              "minute": 7
            },
            "clock2": {
              "hour": -54,
              "minute": -11513
            }
          },
          "expected": true
        },
        {
          "uuid": "17a111d9-2e30-4247-a5d2-2deede1ea6b5",
          "description": "full clock and zeroed clock",
          "property": "equal",
          "input": {
            "clock1": {
              "hour": 24,
              "minute": 0
            },
            "clock2": {
              "hour": 0,
              "minute": 0
            }
          },
          "expected": true
        }
      ]
    }
  ]
}
